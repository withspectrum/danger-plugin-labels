{
  "name": "danger-plugin-labels",
  "description": "Let any contributor (even without write permissions) add labels to their pull requests",
  "author": {
    "name": "Max Stoiber",
    "email": "contact@mxstbr.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/withspectrum/danger-plugin-labels.git"
  },
  "bugs": {
    "url": "https://github.com/withspectrum/danger-plugin-labels/issues"
  },
  "homepage": "https://github.com/withspectrum/danger-plugin-labels#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    ""
  ],
  "version": "2.1.1",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepublish": "npm run build",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
    "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'",
    "lint": "tslint \"src/**/*.ts\""
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "danger": "*",
    "husky": "^0.13.3",
    "jest": "^20.0.1",
    "lint-staged": "^3.4.1",
    "prettier": "^1.15.2",
    "semantic-release": "^6.3.6",
    "ts-jest": "^20.0.0",
    "tslint": "^5.4.3",
    "typescript": "^2.9.2"
  },
  "optionalDependencies": {
    "esdoc": "^0.5.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "npm run prettier-write --",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "github-webhook-event-types": "^1.2.1"
  }
}
